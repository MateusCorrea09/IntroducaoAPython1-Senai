def imprimir_grade_3x3(pos):
    # Linha de separação horizontal
    separador = "+---+---+---+"
    print(separador)
    print(f'| {pos[0]} | {pos[1]} | {pos[2]} |')
    print(separador)
    print(f'| {pos[3]} | {pos[4]} | {pos[5]} |')
    print(separador)
    print(f'| {pos[6]} | {pos[7]} | {pos[8]} |')
    print(separador)
# Assumindo que REPOSITORIO_JOGADAS seja sua variável global
# Exemplo: REPOSITORIO_JOGADAS = [[1, 2, 3], [4, 'X', 6], [7, 8, 9]]

def print_grade(matrix_das_jogadas):
    quadro_de_numeros = []
    for linha in matrix_das_jogadas: 
        for elemento in linha: 
            quadro_de_numeros.append(elemento) 
    imprimir_grade_3x3(quadro_de_numeros) 

